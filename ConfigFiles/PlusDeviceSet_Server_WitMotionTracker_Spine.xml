<PlusConfiguration version="2.1">
	
		
   <Volume
	Id="CTVolume"
	Path="C:/d/pb/bin/Release/Volumes/LumbarSpinePhantom_CT.mha" >
   </Volume>
   <Volume
	Id="SurfaceMesh"
	Path="Volumes/LumbarSpinePhantom.vtk"
	Matrix= "-1 0 0 0
			 0 -1 0 -35
			 0 0 1 -70
			 0 0 0 1">
					 
   </Volume>
   
  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="Spine" 
      Description="C-arm Simulator: Lumbar Spine Module"
    />
	
	<Device 
      Id="TrackerDevice"
      Type="WitMotionTracker"
      SerialPort="4"
      BaudRate="115200"
      ToolReferenceFrame="Tracker" >
      <DataSources>
        <DataSource Type="Tool" Id="Accel" PortName="OrientationSensor" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerChannel">
          <DataSource Id="Accel"/>
        </OutputChannel>
      </OutputChannels>
    </Device>
	
	<Device 
      Id="TrackerDevice2"
      Type="WitMotionTracker"
      SerialPort="6"
      BaudRate="115200"
      ToolReferenceFrame="Tracker2" >
      <DataSources>
        <DataSource Type="Tool" Id="Accel" PortName="OrientationSensor" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerChannel2">
          <DataSource Id="Accel"/>
        </OutputChannel>
      </OutputChannels>
    </Device>  
      
    <Device
      Id="CaptureDevice"
      Type="VirtualCapture"
      BaseFilename="RecordingTest.mha"
      EnableCapturingOnStart="FALSE" >
      <InputChannels>
        <InputChannel Id="TrackerChannel" />
      </InputChannels>
    </Device>

	<Device 
      Id="TrackedVideoDevice" 
      Type="VirtualMixer" >
      <InputChannels>
        <InputChannel Id="TrackerChannel" />
        <InputChannel Id="TrackerChannel2" />
      </InputChannels>      
      <OutputChannels>
        <OutputChannel Id="MergedChannel"/>
      </OutputChannels>
    </Device>
	
  </DataCollection>

  <PlusOpenIGTLinkServer 
    MaxNumberOfIgtlMessagesToSend="1" 
    MaxTimeSpentWithProcessingMs="50" 
    ListeningPort="18944" 
    OutputChannelId="MergedChannel"
    > 
    <DefaultClientInfo> 
      <MessageTypes> 
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames> 
        <Transform Name="AccelToTracker" />
		<Transform Name="AccelToTracker2" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>


</PlusConfiguration>